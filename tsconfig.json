{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "module": "none",
    "moduleResolution": "node",
    "newLine": "lf",
    "noImplicitAny": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es2017"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "types"
  ]
}